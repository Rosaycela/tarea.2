<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/im2"

    tools:context="com.example.marianela.calculadorabasica.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c82424"
        android:alpha="0.5">
    </LinearLayout>

    <EditText
        android:id="@+id/caja1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#181212"
        android:hint="ingrese numero "
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/caja2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#181212"
        android:hint="ingrese numero "
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="sumar"
            android:text="suma"
            android:textColor="#2207ed"
            android:background="@drawable/cadena"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"/>
        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="restar"
            android:text="resta"
            android:textColor="#1a08a7"
            android:background="@drawable/cadena"
            android:layout_marginLeft="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="mult"
            android:text="mul"
            android:textColor="#1a08a7"
            android:background="@drawable/cadena"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="25dp"
            />

        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="div"
            android:text="div"
            android:textColor="#1a08a7"
            android:background="@drawable/cadena"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        android:text="00"
        android:gravity="center"
        android:textSize="120sp"/>



</LinearLayout>
